#!/usr/bin/env ruby

begin
  require "dest" 
rescue LoadError
  puts "Could not load 'dest'" 
  exit
end

# Do a check for rails in here.

if ARGV.include?("-r")
  load File.expand_path("tasks/rails.rake")
  `rake dest:rails`
  exit
end

if ARGV[0]

  path = File.expand_path(ARGV[0])

  if File.file?(path)
    Dest.test_single(path)
  elsif File.directory?(path)
    Dest.test_directory(path)
  else
    puts "#{path} is not a valid file or directory"
  end
else 
  Dest.test_directory("./")
end