#!/usr/bin/env ruby

begin
  require "dest" 
rescue LoadError
  puts "Could not load 'dest'" 
  exit
end

# Do a check for rails in here.

if ARGV[0]

  path = File.expand_path(ARGV[0])

  if File.file?(path)
    Dest.test_single(path)
  elsif File.directory?(path)
    Dest.test_directory(dir)
  else
    puts "#{path} is not a valid file or directory"
  end
else 
  Dest.test_directory("./")
end